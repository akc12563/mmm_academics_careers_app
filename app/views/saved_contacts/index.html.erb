<div class="page-header">
  <h1>
    Saved contacts
    <a href="/saved_contacts/new" class="btn btn-lg btn-success">New Saved contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Contact Name</th>
        <th>Contact Email</th>
        <th>Contact Comments</th>
        <th>Me</th>
        <th>Actions</th>
      </tr>

      <% @saved_contacts.each do |saved_contact| %>
      <tr>
        <td>
          <% if saved_contact.contact_id.present? %>
            <a href ="/users/<%=saved_contact.other_user.id%>">
            <%= saved_contact.other_user.first_name %>
            <%= saved_contact.other_user.last_name%></a></td>
          <td>
              <%= saved_contact.other_user.email%></td>
              <td> <%= saved_contact.comments%></td>

          <% end %>
        </td>
        <td>
          <% if saved_contact.self_id.present? %>
            <a href="/users/<%= saved_contact.self_user.id %>">
              <%= saved_contact.self_user.email %>
            </a>
          <% end %>
        </td>
        <td>


          <% if current_user == saved_contact.self_user %>
             <a href="/saved_contacts/<%= saved_contact.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_saved_contact/<%= saved_contact.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
</div>
