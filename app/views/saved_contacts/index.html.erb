<div class="page-header">
  <h1>
    Saved contacts
    <a href="/saved_contacts/new" class="btn btn-lg btn-success">New Saved contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Student</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @saved_contacts.each do |saved_contact| %>
      <tr>
        <td>
          <% if saved_contact.student.present? %>
            <a href="/students/<%= saved_contact.student.id %>">
              <%= saved_contact.student.first_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if saved_contact.user.present? %>
            <a href="/users/<%= saved_contact.user.id %>">
              <%= saved_contact.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/saved_contacts/<%= saved_contact.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == saved_contact.user %>
            <a href="/saved_contacts/<%= saved_contact.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_saved_contact/<%= saved_contact.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_contacts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
