<div class="page-header">
  <h1>
    Jobs
    <a href="/jobs/new" class="btn btn-lg btn-success">New Job</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Position</th>
        <th>Location</th>
        <th>Job description</th>
        <th>Job requirements</th>
        <th>Job link</th>
        <th>Contact name</th>
        <th>Contact email</th>
        <th>Contact phone</th>
        <th>Deadline</th>
        <th>Actions</th>
      </tr>

      <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company %></td>
        <td><%= job.position %></td>
        <td><%= job.location %></td>
        <td><%= job.job_description %></td>
        <td><%= job.job_requirements %></td>
        <td><%= job.job_link %></td>
        <td><%= job.contact_name %></td>
        <td><%= job.contact_email %></td>
        <td><%= job.contact_phone %></td>
        <td><%= job.deadline %></td>
        <td>
          <a href="/jobs/<%= job.id %>" class="btn btn-primary">Show</a>
          <a href="/jobs/<%= job.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_job/<%= job.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @jobs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
