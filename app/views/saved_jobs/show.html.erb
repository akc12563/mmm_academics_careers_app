<div class="page-header">
  <h3>Saved Job #<%= @saved_job.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Job</dt>
      <dd><%= @saved_job.job_id %></dd>

      <dt>User</dt>
      <dd><%= @saved_job.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/saved_jobs" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @saved_job.user %>
        <a href="/saved_jobs/<%= @saved_job.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_saved_job/<%= @saved_job.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
