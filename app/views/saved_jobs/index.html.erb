<div class="page-header">
  <h1>
    Saved jobs
    <a href="/saved_jobs/new" class="btn btn-lg btn-success">New Saved job</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Position</th>
        <th>Location</th>
        <th>Job description</th>
        <th>Deadline</th>
        <th>Actions</th>
      </tr>

      <% @saved_jobs.each do |saved_job| %>
      <tr>

        <% if saved_job.job.present? %>
        <td>
          <a href="/jobs/<%= saved_job.job.id %>">
              <%= saved_job.job.company %>
            </a>
        </td>
      <td>  <%=saved_job.job.position%></td>
      <td> <%=saved_job.job.location%></td>
      <td> <%=saved_job.job.job_description%></td>
      <td> <%=saved_job.job.deadline%></td>

        <% end %>

        <td>
          <a href="/saved_jobs/<%= saved_job.id %>" class="btn btn-primary">Show Job Details</a>

          <% if current_user == saved_job.user %>
          <div class="row">
            <div class="col-md-12">
            </div> </div>
            <a href="/delete_saved_job/<%= saved_job.id %>" class="btn btn-danger" rel="nofollow">Delete Saved Job</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_jobs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
