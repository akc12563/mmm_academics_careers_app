<div class="page-header">
  <h1>
    Saved jobs
    <a href="/saved_jobs/new" class="btn btn-lg btn-success">New Saved job</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Job</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @saved_jobs.each do |saved_job| %>
      <tr>
        <td>
          <% if saved_job.job.present? %>
            <a href="/jobs/<%= saved_job.job.id %>">
              <%= saved_job.job.company %>
            </a>
          <% end %>
        </td>
        <td>
          <% if saved_job.user.present? %>
            <a href="/users/<%= saved_job.user.id %>">
              <%= saved_job.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/saved_jobs/<%= saved_job.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == saved_job.user %>
            <a href="/saved_jobs/<%= saved_job.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_saved_job/<%= saved_job.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_jobs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
