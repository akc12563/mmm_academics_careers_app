<div class="page-header">
  <h1>
    Saved events
    <a href="/saved_events/new" class="btn btn-lg btn-success">New Saved event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @saved_events.each do |saved_event| %>
      <tr>
        <td>
          <% if saved_event.event.present? %>
            <a href="/events/<%= saved_event.event.id %>">
              <%= saved_event.event.title %>
            </a>
          <% end %>
        </td>
        <td>
          <% if saved_event.user.present? %>
            <a href="/users/<%= saved_event.user.id %>">
              <%= saved_event.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/saved_events/<%= saved_event.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == saved_event.user %>
            <a href="/saved_events/<%= saved_event.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_saved_event/<%= saved_event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_events, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
