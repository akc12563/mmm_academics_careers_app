<!-- Validation failure messages -->
<% if @saved_event.errors.any? %>
  <% @saved_event.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Saved Event</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_saved_event" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for event_id -->
      <div class="form-group">
        <label for="event_id" class="control-label">
          Event
        </label>

        <input type="text" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @saved_event.event_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @saved_event.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Saved Event
      </button>
      or
      <a href="/saved_events">Cancel</a>
    </form>
  </div>
</div>
