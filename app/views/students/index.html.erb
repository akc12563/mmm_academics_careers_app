<div class="page-header">
  <h1>
    Students
    <a href="/students/new" class="btn btn-lg btn-success">New Student</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Grad year</th>
        <th>Internship company</th>
        <th>Internship location</th>
        <th>Internship position</th>
        <th>Full time company</th>
        <th>Full time position</th>
        <th>Full time location</th>
        <th>Current status</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

      <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.grad_year %></td>
        <td><%= student.internship_company %></td>
        <td><%= student.internship_location %></td>
        <td><%= student.internship_position %></td>
        <td><%= student.full_time_company %></td>
        <td><%= student.full_time_position %></td>
        <td><%= student.full_time_location %></td>
        <td><%= student.current_status %></td>
        <td><%= student.email %></td>
        <td>
          <a href="/students/<%= student.id %>" class="btn btn-primary">Show</a>
          <a href="/students/<%= student.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_student/<%= student.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @students, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
