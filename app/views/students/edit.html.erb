<!-- Validation failure messages -->
<% if @student.errors.any? %>
  <% @student.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Student #<%= @student.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_student/<%= @student.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @student.first_name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @student.last_name %>">
      </div>

      <!-- Label and input for grad_year -->
      <div class="form-group">
        <label for="grad_year" class="control-label">
          Grad year
        </label>

        <input type="text" id="grad_year" name="grad_year" placeholder="Grad year" class="form-control" value="<%= @student.grad_year %>">
      </div>

      <!-- Label and input for internship_company -->
      <div class="form-group">
        <label for="internship_company" class="control-label">
          Internship company
        </label>

        <input type="text" id="internship_company" name="internship_company" placeholder="Internship company" class="form-control" value="<%= @student.internship_company %>">
      </div>

      <!-- Label and input for internship_location -->
      <div class="form-group">
        <label for="internship_location" class="control-label">
          Internship location
        </label>

        <input type="text" id="internship_location" name="internship_location" placeholder="Internship location" class="form-control" value="<%= @student.internship_location %>">
      </div>

      <!-- Label and input for internship_position -->
      <div class="form-group">
        <label for="internship_position" class="control-label">
          Internship position
        </label>

        <input type="text" id="internship_position" name="internship_position" placeholder="Internship position" class="form-control" value="<%= @student.internship_position %>">
      </div>

      <!-- Label and input for full_time_company -->
      <div class="form-group">
        <label for="full_time_company" class="control-label">
          Full time company
        </label>

        <input type="text" id="full_time_company" name="full_time_company" placeholder="Full time company" class="form-control" value="<%= @student.full_time_company %>">
      </div>

      <!-- Label and input for full_time_position -->
      <div class="form-group">
        <label for="full_time_position" class="control-label">
          Full time position
        </label>

        <input type="text" id="full_time_position" name="full_time_position" placeholder="Full time position" class="form-control" value="<%= @student.full_time_position %>">
      </div>

      <!-- Label and input for full_time_location -->
      <div class="form-group">
        <label for="full_time_location" class="control-label">
          Full time location
        </label>

        <input type="text" id="full_time_location" name="full_time_location" placeholder="Full time location" class="form-control" value="<%= @student.full_time_location %>">
      </div>

      <!-- Label and input for current_status -->
      <div class="form-group">
        <label for="current_status" class="control-label">
          Current status
        </label>

        <input type="text" id="current_status" name="current_status" placeholder="Current status" class="form-control" value="<%= @student.current_status %>">
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="control-label">
          Email
        </label>

        <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @student.email %>">
      </div>

      <button class="btn btn-warning">
        Update Student
      </button>
      or
      <a href="/students/<%= @student.id %>">Cancel</a>
    </form>
  </div>
</div>
