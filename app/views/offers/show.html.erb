<div class="page-header">
  <h3>Offer #<%= @offer.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Company</dt>
      <dd><%= @offer.company %></dd>

      <dt>Position</dt>
      <dd><%= @offer.position %></dd>

      <dt>Intern fulltime</dt>
      <dd><%= @offer.intern_fulltime %></dd>

      <dt>Location</dt>
      <dd><%= @offer.location %></dd>

      <dt>Status</dt>
      <dd><%= @offer.status %></dd>

      <dt>User</dt>
      <dd><%= @offer.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/offers" class="btn btn-primary">
        Back
      </a>
      <a href="/offers/<%= @offer.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_offer/<%= @offer.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
